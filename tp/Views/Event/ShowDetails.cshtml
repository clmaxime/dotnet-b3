@model mvc.Models.Event

<h1>Détails de l'Événement</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Title">Titre :</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label for="Description">Description :</label>
        <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="EventDate">Date de l'événement :</label>
        <input type="datetime-local" id="EventDate" name="EventDate" class="form-control" value="@Model.EventDate.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <div class="form-group">
        <label for="MaxParticipants">Nombre maximum de participants :</label>
        <input type="number" id="MaxParticipants" name="MaxParticipants" class="form-control" value="@Model.MaxParticipants" />
    </div>
    <div class="form-group">
        <label for="Location">Lieu :</label>
        <input type="text" id="Location" name="Location" class="form-control" value="@Model.Location" />
    </div>
    <div class="form-group">
        <label for="CreatedAt">Date de création :</label>
        <input type="text" id="CreatedAt" name="CreatedAt" class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly />
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Modifier</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer</a>
