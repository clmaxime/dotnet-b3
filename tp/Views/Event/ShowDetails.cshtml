@model mvc.Models.Event

<h1>Détails de l'Événement</h1>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
    <dl class="row">
        <dt class="col-sm-2">Date de l'événement</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("dd/MM/yyyy HH:mm")</dd>
        
        <dt class="col-sm-2">Nombre maximum de participants</dt>
        <dd class="col-sm-10">@Model.MaxParticipants</dd>

        <dt class="col-sm-2">Lieu</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Date de création</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Mettre à jour</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer</a>
