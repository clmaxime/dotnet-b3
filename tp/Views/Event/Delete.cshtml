@model Event

<h2>Supprimer l'event</h2>

<h3>Êtes-vous sûr de vouloir supprimer cet eveneennt ?</h3>
<div>
  <h4>Détails de l'evenelent</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">Titre</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Prénom</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.EventDate</dd>
  </dl>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
  </form>
</div>