@model Teacher

<h2>Supprimer l'enseignant</h2>

<h3>Êtes-vous sûr de vouloir supprimer cet enseignant  ?</h3>
<div>
  <h4>Détails de l'enseignant</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">Nom</dt>
    <dd class="col-sm-10">@Model.Lastname</dd>
    <dt class="col-sm-2">Prénom</dt>
    <dd class="col-sm-10">@Model.Firstname</dd>
  
 
  </dl>

  <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
  </form>
</div>